package com.example.demo.controller;

import java.math.BigDecimal;
import java.math.BigInteger;

public class test {
	public static void main(String[] args) {
		test t = new test();		
		System.out.println("결과:"+t.myAtoi("9223372036854775808"));
	}
	
	public int myAtoi(String str) {
        str=str.trim();
	        
        if(str == null || str.length() == 0){
            return 0;
        }
    		
        StringBuffer s = new StringBuffer();
        
        char chk;
        boolean b = false;
        int startIndex = 0;
        	        	        	        
        if(str.length() > 0 && str.charAt(0) == '-') {        	
        	b = true;
        	startIndex = 1;	        	
        }else if(str.length() > 0 && str.charAt(0) == '+'){	        	
            startIndex = 1;
        }
    
        if(str.length() == 1){
            if(str.charAt(0) == '+' || str.charAt(0) == '-'){
                return 0;
            }
        }
       	        	        	        
       for(int i=startIndex; i<str.length(); i++) {
    	   chk = str.charAt(i);
    	   
    	   if(i==startIndex && !Character.isDigit(chk)) {
    		   return 0;
    	   } 
    	   if(!(chk < 48 || chk > 58)) {
    		   s.append(chk);
    	   }else {
    		   break;
    	   }
       }
       System.out.println(s.toString());
       long integer = new BigDecimal( s.toString() ).longValue();
    		  
       System.out.println(integer);
       if(b){    	   
        integer = -integer;   
       }
       
        if(integer < Integer.MIN_VALUE) {
        	System.out.println("최소");
        	return Integer.MIN_VALUE;
        }else if(integer > Integer.MAX_VALUE) {
        	System.out.println("최대");
        	return Integer.MAX_VALUE;
        }
        
       return (int)integer;
	}
}
